<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jisung.mapper.FavoriteMapper">
	<insert id="insert">
		insert into tbl_favorite(favoriteId,userid,bookid) values(seq_favorite.nextval,#{userid},#{bookId})
	</insert>
	
	<select id="prevent_dup" resultType="int">
		<!-- 해당 유저 아이디로 해당 책에 좋아요를 눌렀는지 아닌지 확인 -->
		select count(*) from tbl_favorite where userid = #{userid} and bookId = #{bookId}
	</select>
	
	<delete id="delete">
		delete from tbl_favorite where userid = #{userid} and bookId = #{bookId}
	</delete>
</mapper>